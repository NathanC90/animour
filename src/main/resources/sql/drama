drop table drama cascade;

/**drama table*/
create table drama(
	id bigSerial primary key,
    dname varchar(50),
    noofseasons int,
    noofepisodes int,
    year int,
    country varchar(20)
    );

/**drama 資料*/
insert into drama (dname , noofseasons , noofepisodes , year , country) values ('TBBT' ,1 ,17 ,2007 , 'USA' );
insert into drama (dname , noofseasons , noofepisodes , year , country) values ('Elementary' ,1 ,24 ,2012 , 'USA' );
insert into drama (dname , noofseasons , noofepisodes , year , country) values ('Westworld' ,1 ,10 ,2016 , 'USA' );
insert into drama (dname , noofseasons , noofepisodes , year , country) values ('Game of Thrones' ,1 ,10 ,2011 , 'USA' );





drop table actor cascade;
/**actor table*/

create table actor(
	id bigSerial,
    a_character varchar(50),
	actor varchar(50),
    d_id bigSerial REFERENCES drama(id)    
	);

/**actor 資料**/
insert into actor (a_character , actor , d_id) values ('Leonard Hofstadter' , 'Johnny Galecki' ,1 );
insert into actor (a_character , actor , d_id) values ('Sheldon Cooper' , 'Jim Parsons' ,1 );
insert into actor (a_character , actor , d_id) values ('Penny' , 'Kaley Cuoco' ,1 );
insert into actor (a_character , actor , d_id) values ('Howard Wolowitz' , 'Simon Helberg' ,1 );
insert into actor (a_character , actor , d_id) values ('Sherlock Holmes' , 'Jonny Lee Miller' ,2 );
insert into actor (a_character , actor , d_id) values ('Joan Watson' , 'Lucy Liu' ,2 );
insert into actor (a_character , actor , d_id) values ('Thomas Gregson' , 'Aidan Quinn' ,2 );
insert into actor (a_character , actor , d_id) values ('Dolores Abernathy' , 'Evan Rachel Wood' ,3 );

